<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" Text="{Binding ElementName=date ,Path=SelectedDate,StringFormat=dd/MM/yy}"  HorizontalAlignment="Left" Height="23" Margin="66,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="date" SelectedDate="{Binding Path=AvailableFrom}" HorizontalAlignment="Left" Margin="302,72,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
